<resources>

    <!-- Base application theme. -->
    <style name="AppTheme"></style>

    <style name="checkbox_default_style" commit="默认复选框">
        <item name="android:button">@null</item>
        <item name="android:drawableLeft">@drawable/select_default_checkbox</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:textColor">@color/color_default_text_gray</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:minEms">4</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="menu_activity_button_style" commit="菜单按钮样式">
        <item name="android:background">@drawable/select_drawable_menu_button</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:paddingTop">35dp</item>
        <item name="android:paddingBottom">25dp</item>
        <item name="android:textColor">@color/white_color</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="plan_title_text_style" commit="计划生产单，工单文字样式">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:textColor">@color/select_color_black_green</item>
    </style>

    <style name="sorting_list_title_text_style" commit="计划生产单，工单文字样式">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">22sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color_default_text_black_2h</item>
    </style>

    <style name="adapter_plan_list_text_style" commit="计划生产单，工单文字样式">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color_default_text_gray</item>
    </style>
</resources>
