<resources>

    <!-- Base application theme. -->
    <style name="AppTheme"></style>

    <style name="checkbox_default_style" commit="默认复选框">
        <item name="android:button">@null</item>
        <item name="android:drawableLeft">@drawable/select_default_checkbox</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:textColor">@color/color_default_text_gray</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:minEms">4</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="menu_activity_button_style" commit="菜单按钮样式">
        <item name="android:background">@drawable/select_drawable_menu_button</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:paddingTop">35dp</item>
        <item name="android:paddingBottom">25dp</item>
        <item name="android:textColor">@color/color_default_white</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="plan_title_text_style" commit="计划生产单，工单文字样式">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">22sp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:textColor">@color/select_color_black_green</item>
    </style>

    <style name="sorting_info_title_text_style" commit="计划生产单，工单文字样式">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textColor">@color/color_default_text_black_2h</item>
    </style>

    <style name="sorting_list_title_text_style" commit="计划生产单，工单文字样式">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color_default_text_black_2h</item>
    </style>

    <style name="adapter_plan_list_text_style" commit="计划生产单，工单文字样式">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color_default_text_gray</item>
    </style>
    
    <style name="sorting_info_text_title_style" commit="分拣单详情标题">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">@color/color_default_text_black_1h</item>
    </style>

    <style name="sorting_info_text_style" commit="分拣单详情" parent="sorting_info_text_title_style">
        <item name="android:textColor">@color/color_default_text_gray</item>
    </style>

    <style name="red_frame_button_style" commit="红框按钮">
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color_default_text_black_2h</item>
        <item name="android:background">@drawable/select_frame_red_white_bg</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <!--自定义dialog背景全透明无边框theme -->
    <style name="MyDialog" parent="android:style/Theme.Dialog">
        <!--&lt;!&ndash;背景颜色及和透明程度&ndash;&gt;-->
        <!--<item name="android:windowBackground">@android:color/transparent</item>-->
        <!--是否去除标题 -->
        <item name="android:windowNoTitle">true</item>
        <!--是否去除边框-->
        <item name="android:windowFrame">@null</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsFloating">true</item>
        <!--是否模糊-->
        <item name="android:backgroundDimEnabled">true</item>
    </style>
</resources>
