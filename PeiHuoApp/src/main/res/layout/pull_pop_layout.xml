<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="10dp"
    android:gravity="center_horizontal"
    android:background="@mipmap/pull_bg"
    android:layout_width="150sp"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/pull_list_no_pass"
        android:textSize="20sp"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="未验收"
        android:gravity="center"
        android:textColor="@color/color_default_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_default_white"/>
    <TextView
        android:id="@+id/pull_list_error"
        android:layout_width="wrap_content"
        android:textSize="20sp"
        android:text="异常"
        android:padding="5dp"
        android:gravity="center"
        android:textColor="@color/color_default_white"
        android:layout_height="wrap_content" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_default_white"/>
    <TextView
        android:id="@+id/pull_list_all"
        android:textSize="20sp"
        android:text="全部"
        android:padding="5dp"
        android:gravity="center"
        android:textColor="@color/color_default_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>