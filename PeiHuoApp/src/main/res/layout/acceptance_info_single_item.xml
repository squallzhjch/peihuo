<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="@color/color_default_white"
    android:paddingLeft="50dp"
    android:paddingRight="50dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/acceptance_info_item_name"
        style="@style/sorting_info_text_style"
        />
    <TextView
        android:id="@+id/acceptance_info_item_code"
        style="@style/sorting_info_text_style"
        />
    <TextView
        android:id="@+id/acceptance_info_item_count"
        style="@style/sorting_info_text_style"
        />
    <TextView
        android:id="@+id/acceptance_info_item_unit"
        style="@style/sorting_info_text_style"
        />
</LinearLayout>