<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:background="@drawable/select_sorting_info_item_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/sorting_info_item_name"
        style="@style/sorting_info_text_style"
        />
    <TextView
        android:id="@+id/sorting_info_item_code"
        style="@style/sorting_info_text_style"
        />
    <TextView
        android:id="@+id/sorting_info_item_count"
        android:layout_weight="0.5"
        style="@style/sorting_info_text_style"
        />
    <TextView
        android:id="@+id/sorting_info_item_unit"
        android:layout_weight="0.5"
        style="@style/sorting_info_text_style"
        />
    <TextView
        android:id="@+id/sorting_info_item_prostandard"
        android:layout_weight="0.5"
        style="@style/sorting_info_text_style"
        />
    <TextView
        android:id="@+id/sorting_info_item_type"
        android:layout_weight="0.5"
        style="@style/sorting_info_text_style"
        />
    <TextView
        android:visibility="gone"
        android:id="@+id/sorting_info_item_handling"
        style="@style/sorting_info_text_style"
        />
</LinearLayout>