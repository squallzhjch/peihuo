<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="@drawable/green_title"
    android:layout_width="match_parent"
    android:gravity="center_vertical"
    android:paddingRight="20dp"
    android:paddingLeft="10dp"
    android:layout_height="80dp">
    <ImageView
        android:id="@+id/title_back_button"
        android:padding="20dp"
        android:src="@mipmap/back_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/title_text"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:textColor="@color/white_color"
        android:textSize="@dimen/h1_title_size"
        android:layout_height="wrap_content" />
    <ImageView
        android:padding="20dp"
        android:id="@+id/title_username_icon"
        android:src="@mipmap/login_user_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/title_username_text"
        android:textColor="@color/white_color"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>