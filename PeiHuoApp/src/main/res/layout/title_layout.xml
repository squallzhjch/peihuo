<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="@drawable/green_title"
    android:layout_width="match_parent"
    android:gravity="center_vertical"
    android:paddingRight="40dp"
    android:paddingLeft="10dp"
    android:layout_height="80dp">
    <ImageView
        android:id="@+id/title_back_button"
        android:padding="20dp"
        android:src="@mipmap/back_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/title_text_small"
        android:layout_toRightOf="@id/title_back_button"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:text="24sp"
        android:paddingLeft="10dp"
        android:textColor="@color/white_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="@color/white_color"
        android:textSize="@dimen/h1_title_size"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/title_username_text"
        android:textColor="@color/white_color"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:textSize="26sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:padding="20dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/title_username_text"
        android:id="@+id/title_username_icon"
        android:src="@mipmap/login_user_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>